<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient2"
    tools:context=".MainActivity">

    <ImageView
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logg"
        />

    <EditText
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic"
        android:backgroundTint="@color/colorAccent"
        android:id="@+id/user_name"
        android:drawableLeft="@drawable/ic_verified_user_black_24dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/txt1"

        />

    <EditText
        android:layout_marginBottom="20dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic"
        android:backgroundTint="@color/colorAccent"
        android:id="@+id/password"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/txt2"
        android:inputType="textPassword"
        />

    <Button
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:id="@+id/login_btn"
        android:text="Login"
        android:textColor="#90ECD9"
        android:textSize="25sp"
        android:textStyle="italic|bold"
        android:textAllCaps="false"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/grdeint1"
        android:shadowColor="#27A81E"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />
    <TextView
        android:gravity="center"
        android:textAlignment="center"
        android:id="@+id/attempted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt3"
        android:textStyle="italic|bold"
        android:textColor="#0B8067"
        android:textIsSelectable="true"
        android:textSize="20sp"
        />

</LinearLayout>